<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllChatsActivity"
    android:background="#DEF8F8">

    <View
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:alpha="1"
        android:background="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawablePadding="8dp"
        android:text="@string/chats"
        android:textColor="#157177"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="@+id/backBtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:text="@string/my_community"
        android:textColor="#7A7F7F"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/backBtn"
        app:layout_constraintTop_toBottomOf="@+id/backBtn" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_yellow"
                android:padding="3dp"
                android:src="@drawable/john_cooper" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_yellow"
                android:padding="3dp"
                android:src="@drawable/lucas_bennet" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_yellow"
                android:padding="3dp"
                android:src="@drawable/emma_thompson" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_yellow"
                android:padding="3dp"
                android:src="@drawable/alex_taylor" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_yellow"
                android:padding="3dp"
                android:src="@drawable/aurelia_pascal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_yellow"
                android:padding="3dp"
                android:src="@drawable/ethan_lee" />
        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView20"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="3dp"
                    android:src="@drawable/john_cooper"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="John Cooper"
                    android:textColor="#157177"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/circleImageView20"
                    app:layout_constraintTop_toTopOf="@id/circleImageView20" />

                <TextView
                    android:id="@+id/messageTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 New Message"
                    android:textSize="12sp"
                    android:textColor="#A70606"
                    app:layout_constraintEnd_toEndOf="@+id/nameTextView1"
                    app:layout_constraintStart_toStartOf="@+id/nameTextView1"
                    app:layout_constraintTop_toBottomOf="@id/nameTextView1" />

                <View
                    android:id="@+id/strokeView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="1"
                    android:background="@color/light_cyan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView21"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="3dp"
                    android:src="@drawable/alex_taylor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Alex Taylor"
                    android:textColor="#157177"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/circleImageView21"
                    app:layout_constraintTop_toTopOf="@id/circleImageView21" />

                <TextView
                    android:id="@+id/messageTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No New Message"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    app:layout_constraintEnd_toEndOf="@+id/nameTextView3"
                    app:layout_constraintStart_toStartOf="@+id/nameTextView3"
                    app:layout_constraintTop_toBottomOf="@id/nameTextView3" />

                <View
                    android:id="@+id/strokeView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="1"
                    android:background="@color/light_cyan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView22"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_yellow"
                    android:padding="3dp"
                    android:src="@drawable/aurelia_pascal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Aurelia Pascal"
                    android:textColor="#157177"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/circleImageView22"
                    app:layout_constraintTop_toTopOf="@id/circleImageView22" />

                <TextView
                    android:id="@+id/messageTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No New Message"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    app:layout_constraintEnd_toEndOf="@+id/nameTextView4"
                    app:layout_constraintStart_toStartOf="@+id/nameTextView4"
                    app:layout_constraintTop_toBottomOf="@id/nameTextView4" />

                <View
                    android:id="@+id/strokeView3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="1"
                    android:background="@color/light_cyan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:text="@string/all_messages"
        android:textColor="#7A7F7F"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/backBtn"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ImageView
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#157177"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavBar"
        app:layout_constraintEnd_toEndOf="@+id/bottomNavBar"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/bottomNavBar"
        app:srcCompat="@drawable/circle2" />

    <ImageView
        android:id="@+id/white_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:srcCompat="@drawable/circle5" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:text="+"
        android:textColor="#157177"
        app:layout_constraintBottom_toBottomOf="@+id/white_circle"
        app:layout_constraintEnd_toEndOf="@+id/white_circle"
        app:layout_constraintStart_toStartOf="@+id/white_circle"
        app:layout_constraintTop_toTopOf="@+id/white_circle" />

    <TextView
        android:id="@+id/searchIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Search"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/searchIc"
        app:layout_constraintStart_toStartOf="@+id/searchIc"
        app:layout_constraintTop_toBottomOf="@+id/searchIc" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Chat"
        android:textColor="#51A8A6"
        app:layout_constraintEnd_toEndOf="@+id/chatIc"
        app:layout_constraintStart_toStartOf="@+id/chatIc"
        app:layout_constraintTop_toBottomOf="@+id/chatIc" />

    <TextView
        android:id="@+id/profileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Profile"
        android:textColor="#51A8A6"
        app:layout_constraintEnd_toEndOf="@+id/accountIc"
        app:layout_constraintStart_toStartOf="@+id/accountIc"
        app:layout_constraintTop_toBottomOf="@+id/accountIc" />

    <TextView
        android:id="@+id/textView147"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Home"
        android:textColor="#51A8A6"
        app:layout_constraintEnd_toEndOf="@+id/homeIc"
        app:layout_constraintStart_toStartOf="@+id/homeIc"
        app:layout_constraintTop_toBottomOf="@+id/homeIc" />

    <ImageView
        android:id="@+id/homeIc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/searchIc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomNavBar"
        app:srcCompat="@drawable/ic_home" />

    <ImageView
        android:id="@+id/searchIc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView147"
        app:layout_constraintEnd_toStartOf="@+id/chatIc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/homeIc"
        app:layout_constraintTop_toTopOf="@+id/homeIc"
        app:srcCompat="@drawable/ic_search_white" />

    <ImageView
        android:id="@+id/chatIc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/searchIcon"
        app:layout_constraintEnd_toStartOf="@+id/accountIc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/searchIc"
        app:layout_constraintTop_toTopOf="@+id/searchIc"
        app:srcCompat="@drawable/ic_chat" />

    <ImageView
        android:id="@+id/accountIc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/chatIc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chatIc"
        app:layout_constraintTop_toTopOf="@+id/chatIc"
        app:srcCompat="@drawable/ic_account" />



</androidx.constraintlayout.widget.ConstraintLayout>